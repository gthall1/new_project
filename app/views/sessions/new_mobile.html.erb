<% content_for :body_class, "hide-top-title" %>

<div class='mobile-header'>
    <%= link_to root_path do %>
    <i class="fa fa-chevron-left back-button"></i>
    <% end %>
    <h2><%= link_to games_path do %><img src="/assets/luckee-font.png" class="mobile-header__logo"><% end %></h2>
</div>


<% provide(:title, "Sign in") %>
<h1 class="intro-header intro-header--mobile">Sign in</h1>

<div class="sign-in">
  <%= link_to "/auth/facebook" do %>
    <%= image_tag 'sign_in_facebook.png', :class => 'facebook-signup' %>
  <% end %>

  <div class='form-separator'>
    <div class='left-separator'></div><div class='or-separator'>or</div><div class='right-separator'></div>
  </div>

  <%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email, class: "session__input" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "session__input" %>
    <%= link_to "(forgot password)", new_password_reset_path %>

    <%= f.submit "Sign in", class: "form-submit" %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", root_path %></p>
</div>
