<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="sign-in">
    <%= link_to "/auth/facebook" do %>
      <%= image_tag 'facebook_button.png', :class => 'facebook-signup' %>
    <% end %>

    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", root_path %></p>
  </div>
</div>
