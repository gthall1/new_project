<% provide(:title, "Sign in") %>
<% content_for :body_class, "page-background" %>

<h1>Sign in</h1>

<div class="row">
  <div class="sign-in--desktop">
    <%= link_to "/auth/facebook" do %>
      <% image_tag "sign_in_facebook.png", :width => "250px" %>
    <% end %>

    <div class='form-separator'>
      <div class='left-separator'></div><div class='or-separator'>or</div><div class='right-separator'></div>
    </div>

    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <%= link_to "(forgot password)", new_password_reset_path %>
  </div>
</div>
