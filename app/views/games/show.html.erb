<% content_for :title, "#{@game.name}" %>
<% content_for :description, "#{@game.description}" %>

<% if show_ads %>
    <%= render partial: "/ad_units/ad_wide", :locals => {ad_slot: "3917225076"} %>
<% end %>
  <% if session[:branded_ad].nil? %>
    <h2 style='font-size:18px;'><%= @game.name %></h2>
  <% end %>
<p id="notice"><%= notice %></p>
  <% case @game.slug %>
    <% when 'test' %>
      <h2 class="outcome">Click to play! 1/5 wins a credit!</h2>
      <div class="ad-space">
        A partner image will show here sometimes!
      </div>
      <button class="play">Click here!</button>
      <%= javascript_include_tag "game" %>
    <% when 'memory-game' %>
      <%= render 'memory' %>
    <% when 'helicopter' %>
      <%= render 'helicopter' %>
    <% when 'sorcerer-game' %>
      <%= render 'sorcerer_m' %>
    <% when '2048' %>
      <%= render 'twentyfortyeight_m' %>
    <% when 'flappy-pilot' %>
      <%= render 'flappy_pilot_m' %>
    <% when 'black-hole' %>
      <%= render 'blackhole_m' %>
    <% when 'fall-down' %>
      <%= render 'fall_down_m' %>
    <% when 'traffic' %>
      <%= render 'traffic_m' %>
    <% when 'tap-color' %>
      <%= render 'tap_color' %>      
    <% when 'gold-runner' %>
      <%= render 'gold_runner' %>  
  <% end %> 
  <% if session[:branded_ad].nil? %>
    <br /> <br/>
    <p class='game-description container' > 
      <%= @game.description %>
    </p>
  <% end %>
<% if @game.slug == '2048' %>
  <input type="hidden" id="game_token" name="game_token" value="<%= session[:game_token] %>" />
<% end %>
