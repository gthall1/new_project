<% content_for :body_class, "leaderboard-index-page leaderboard-index-page--mobile" %>

<div class='my-balance'>
  <div class='redeem'>
    <%= embedded_svg('svgs/leaderboard.svg', :class => 'leaderboard-svg') %>
    <div class="redeem__copy">
      <p class="redeemCredits">Leaderboards</p>
      <p class="redeemCredits__desc">View the top contenders</p>
    </div>
  </p>

  </div>
</div>
<div class='inner-page__list'>
  <p class="page-title">Games</p>
  <ul>
    <% @games.each do | g | %>
      <%= link_to game_leaderboard_new_path(game_slug:g.slug) do %>
      <li>
        <%= g.name %>
        <span class='cash-out__cost'>View Leaderboard</span>
        <i class="fa fa-angle-right"></i>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
