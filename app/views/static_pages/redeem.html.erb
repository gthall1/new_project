<% provide(:title, 'Redeem') %>
<div class='my-balance'>
	<div class='redeem'>
		<i class="fa fa-usd redeem__dollars"></i>
		<div class="redeem__copy">
			<p class="redeemCredits">My balance: <span class='credits'>
			<%= current_user.credits.blank? ? "0" : current_user.credits %></span>
			<p class="redeemCredits__desc">Redeem your credits for cash</p>
		</div>
	</p>

	</div>
</div>
<div class='cash-out'>
	<h1 class="cash-out__title">Rewards</h1>
	<ul>
		<li>$5
			<span class='cash-out__cost'>-1000 credits</span>
			<i class="fa fa-angle-right"></i>
		</li>
		<li>$10
			<span class='cash-out__cost'>-1900 credits</span>
			<i class="fa fa-angle-right"></i>
		</li>
		<li>$20
			<span class='cash-out__cost'>-2800 credits</span>
			<i class="fa fa-angle-right"></i>
		</li>
	</ul>
</div>
