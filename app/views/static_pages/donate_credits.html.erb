<% content_for :body_class, "interior-page" %>

<div class="interior-hero">
  <h1 class="interior-hero__title">Balance: <span class='credits'>
        <%= current_user.credits.blank? ? "0" : current_user.credits %> credits</span></h1>
  <p class="interior-hero__desc">
    The American Red Cross is a humanitarian organization that provides emergency assistance, disaster relief and education inside the United States.
    <span class="byline"></span><!-- /insert name of charity -->
  </p>

</div> <!--/.interior-hero -->

<h1 class="donations__caption donations__caption--checkout">Confirm that you would like to redeem <%= @amount %> credits for a $<%= @dollar_amt %> donation to The American Red Cross.</h1>

<div class="donations__final-step">
<%= form_for(@cash_out, url:{:controller=>'static_pages', :action=>'new_donation'}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :credits, :value => @amount %>
  <%= f.hidden_field :cashout_type, :value => 2 %>
    <div class='final-step'>
      <%= f.submit "Donate", class: "btn-submit cash-out__submit" %>
    </div><!--/.final-step -->
<% end %>
</div>
