<% if Rails.env.production? %>
    <%= content_for :extra_top_js do %>
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <% end %>
    <!-- Mobile Bottom -->
    <ins class="adsbygoogle"
         style="display:inline-block;width:320px;height:100px"
         data-ad-client="ca-pub-9909143434790892"
         data-ad-slot="<%= ad_slot %>"></ins>
    <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
<% else %>
    <div style='display:inline-block;width:320px;height:100px;background-color:#cecece;'>
        Ad space.  Shown for dev and staging.
    </div>
<% end %>


