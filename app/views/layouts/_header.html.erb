<header class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to "@lotto", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">

          <% if signed_in? %>
            <li class="navbar-user" id="credits">@<%= current_user.name %>:</li>
            <li class="navbar-links" id="credits" data-user-credits="<%= current_user.credits %>" style="color:#ff0000"><span id="credit_count">
            <% if current_user.credits %>
            <%= current_user.credits %>
            <% else %>
            0
            <% end %>
            </span> credits</li>
            <li class="navbar-links" id="normal-links"><%= link_to "Surveys", '#' %></li>

            <li class="navbar-links btn btn-outlined btn-theme btn-sm" data-wow-delay="0.7s"><%= link_to "Deposit Credits", current_jackpot_path %></li>

            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars fa-3x"></i></a>
              <ul class="dropdown-menu">
                <li><%= link_to "FAQ", faq_path %></li>
                <li><%= link_to "How it works", how_it_works_path %></li>
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="navbar-links" id="normal-links"><%= link_to "How it works", how_it_works_path %></li>
            <li class="navbar-links" id="normal-links"><%= link_to "FAQ", faq_path %></li>
            <li id="navbar-button" class="navbar-links btn btn-outlined btn-theme btn-sm" ><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div><!-- container -->
  </div>
