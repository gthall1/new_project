        <%= yield :extra_top_js %>
        <%= yield :game_javascript %>
    </head>
    <body ondragstart="return false;" ondrop="return false;" id="<%= yield (:body_id) %>" class="<%= yield (:body_class) %> <% if @game && Game.where(slug:['traffic','flappy-pilot','fall-down','tap-color','gold-runner','match-three']).pluck(:id).include?(@game.id) %>mobile-header--hide<% end %> <% if current_user %>logged-in<% end %> <% if is_dunkin_user? %>dunkin-tester--mobile<% end %> <% if Rails.env.development? %>development<% end %>">

        <%= render 'layouts/form_errors' %>
        <%= render 'layouts/loading_screen' %>

        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        <% if signed_in? %>
        <nav class="nav ssm-nav-visible">
            <div class='side-nav-top'>
                <% if signed_in? %>
                    <div class="side-nav__user-info">
                        <h2 class="side-nav__close">Swipe to close</h2>
                            <div class="side-nav__avatar" style="<% if current_user.oath_image %>background-image: url(<%= current_user.oath_image %>); <% else %> background-image: url(/assets/avatar-icon.png); <% end %>"></div>
                        <h2 class="side-nav__username"><%= current_user.name %></h2>
                        <h2 class='lifetime-credits'> <span class='credits'><%= pluralize(current_user.credits, 'credit')%></span></h2>
                    </div>
                    <ul class="side-nav_links">
                        <%= link_to refer_path do %>
                        <li>
                            <i class="fa fa-user-plus survey-icon"></i>
                            Invite Friends
                            <span class='survey-credits'>+25</span>
                        </li>
                        <% end %>
                        <a href="mailto:support@getluckee.com" target="_top">
                            <li>
                                <i class="fa fa-envelope-o"></i>
                                Contact Us
                            </li>
                        </a>
                        <%= link_to edit_user_path(current_user) do %>
                        <li class="side-nav__settings">
                            <%= embedded_svg('svgs/icons/gear42.svg', :class => 'settings-icon') %>

                                Settings

                        </li>
                        <% end %>
                    </ul>
                    <div class="side-nav__signout">
                        <i class="fa fa-sign-out"></i>
                        <%= link_to "Sign out", signout_path, method: "delete", class: 'side-nav__signout-link'%>
                    </div>
                <% end %>
            </div><!--/.side-nav-top -->
        </nav>

        <div class="ssm-overlay"></div>

        <% end %>

        <div <%= "id=#{@mobile_container_id}" if @mobile_container_id %> class='mobile-container' style="width:100%;">
            <div class="mobile--overlay">
                <%= render 'static_pages/overlay_add_to_home' %>
                <%= render 'static_pages/overlay_rotate_to_play' %>
            </div><!-- /.mobile--overlay -->
            <% if signed_in? %>
                <div class="mobile-header js-mobile-header">
                    <% if @show_back_button %>
                        <% if @back_button_action %>
                            <span class='<%= @back_button_action %>'style='display:none'><i class="fa fa-chevron-left back-button"></i></span>
                                <% if is_dunkin_user? %>
                                    <%= link_to dunkin_path, :class=>'back-link' do %>
                                     <i class="fa fa-chevron-left back-button"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to games_path, :class=>'back-link' do %>
                                    <i class="fa fa-chevron-left back-button"></i>
                                    <% end %>
                                <% end %>
                        <% else @show_back_button %>
                            <% if is_dunkin_user? %>
                                <%= link_to dunkin_path, :class=>'back-link' do %>
                                 <i class="fa fa-chevron-left back-button"></i>
                                <% end %>
                            <% else %>
                                <%= link_to games_path, :class=>'back-link' do %>
                                <i class="fa fa-chevron-left back-button"></i>
                                <% end %>
                            <% end %>
                        <% end %>
                    <% else %>
                         <div class="ssm-open-nav" title="open nav" >
                            <i class="fa fa-bars mobile-menu"></i>
                        </div>
                    <% end %>
                    <% if @game %>
                        <h2 style='font-size:27px;'><%= @game.name %><br /><span class='credits' <% if @game.name == 'Sorcerer Game' %>style='top:0px'<% end %>><%= current_user.credits ||= 0 %> credits</span></h2>
                    <% else %>
                        <h2><%= link_to games_path do %><img src="/assets/small_luckee_font-no-beta.png" class="mobile-header__logo"><% end %><br /><span class='credits mobile-header__credits'><%= current_user.credits ||= 0 %> credits</span></h2>
                    <% end %>

                    <div class='referral-link'>

                        <div class="share-dialog js-share-dialog">
                            <div class="arrow-up"></div>
                            <p>When you invite a friend and they sign up through your personalized link, you earn <span>25 credits</span></p>
                            <p>Copy &amp; share:</p>
                            <p class="share-dialog__link"><%# request.host_with_port %>/invite/<%=@referal_code %></p>
                            <div class="share-dialog__close-container">
                                <p class="share-dialog__close js-share-dialog__close">Got it</p>
                            </div>
                        </div>

                        <%= link_to refer_path do %>
                            <i class="fa fa-user-plus"></i>
                        <% end %>
                    </div> <!-- /.referral-link -->
                </div>

                <div class="bottom-navigation bottom-navigation--mobile js-bottom-navigation">
                    <%= link_to games_path do %>
                    <div class="bottom-nav__item <%= "active" if @current_page == "games" %>">
                        <p class="bottom-nav__item-copy"><img class="bottom-nav__img" src="/assets/svgs/home-thin.svg">Games</p>
                    </div>
                    <% end %>

                    <a href="/surveys" class="js-survery-link">
                        <div class="bottom-nav__item <%= "active" if @current_page == "surveys" %>">
                            <i class="fa fa-exclamation js-survey-notification notification"></i>
                            <p class="bottom-nav__item-copy"><img class="bottom-nav__img" src="/assets/svgs/survey-thin.svg">Surveys</p>
                        </div>
                    </a>

                    <%= link_to redeem_path do %>
                        <div class="bottom-nav__item bottom-nav__item--primary <%= "active" if @current_page == "redeem" %>">
                            <p class="bottom-nav__item-copy"><img class="bottom-nav__img" src="/assets/navbar_3.png">Redeem</p>
                        </div>
                        <% end %>

                    <%= link_to leaderboards_path do %>
                        <div class="bottom-nav__item <%= "active" if @current_page == "leaderboard" %>"> <!-- add bottom-nav__item--leaderboard -->
                            <p class="bottom-nav__item-copy"><img class="bottom-nav__img" src="/assets/svgs/leader-thin.svg">Leaders</p>
                        </div>
                    <% end %>

                    <%= link_to user_path(current_user.id) do %>
                        <div class="bottom-nav__item bottom-nav__item--profile <%= "active" if @current_page == "profile" %>">
                            <p class="bottom-nav__item-copy"><img class="bottom-nav__img" src="/assets/svgs/profile-thin.svg">Profile</p>
                        </div>
                    <% end %>
                </div><!-- /.bottom-navigation -->
            <% end %>
          <%= yield %>
        </div>
        <% if signed_in? %>
            <script>
                 $('.nav').slideAndSwipe();
                 $(document).ready(function(){
                    if(/iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream){
                      document.querySelector('meta[name=viewport]')
                        .setAttribute(
                          'content',
                          'initial-scale=1.0001, minimum-scale=1.0001, maximum-scale=1.0001, user-scalable=no'
                        );
                    }
                     //$('.ssm-open-nav').trigger('click');
                 });
            </script>

        <% end %>

