<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <% if @user.oath_image %><%= image_tag(@user.oath_image) %> <% else %> <%= image_tag('avatar-icon.png') %><% end %>
      <h1 style='text-align:center'><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>