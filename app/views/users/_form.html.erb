<% if signups_allowed? %>
<div class='mobile-form'>
    <div class="welcome-box-m">Play Games. Earn Cash.</div>
    <% if @facebook_link %>
      <%= link_to @facebook_link do %>
        <%= image_tag 'facebook_button.png', :class => 'facebook-signup' %>
      <% end %>
    <% else %>
      <%= link_to "/auth/facebook" do %>
        <%= image_tag 'facebook_button.png', :class => 'facebook-signup' %>
      <% end %>
    <% end %>

    <span class='small-note'>We do not post anything to facebook.</span>


    <div class='form-separator'>
      <div class='left-separator'></div><div class='or-separator'>or</div><div class='right-separator'></div>
    </div>

    <%= image_tag 'email_button.png', :class => 'email-signup' %>

    <div class='email-form'>
      <h2> Register with email </h2>
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.text_field :name, placeholder: 'Username' %>

        <%= f.text_field :email, placeholder: 'Email' %>

        <%= f.password_field :password, placeholder: "Password" %>

        <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>

        <%= f.submit "Create my account", class: "btn btn-outlined btn-white btn-lg btn-Create create-email" %>

      <% end %>
    </div>
      <div class='sign-in'>
        Already have an account?  <%= link_to "Sign In", signin_path %>
      </div>
</div>
<% else %>
  <img style="margin-top: 20px;" src="http://i.giphy.com/3xz2BtrwQ2wIBeciAw.gif">
<% end %>

