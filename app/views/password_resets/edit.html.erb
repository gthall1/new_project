<% provide(:title, 'Reset password') %>
<h1>Reset password</h1>

<div class="row">
  <div class="sign-in">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', style:'max-width:250px' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control',style:'max-width:250px' %>
      <br />
      <%= f.submit "Update password", class: "btn btn-primary",style: 'background:#0065CC' %>
    <% end %>
  </div>
</div>