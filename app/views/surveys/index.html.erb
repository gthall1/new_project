<% content_for :body_class, "interior-page" %>

<div class="interior-hero">
  <h1 class="interior-hero__title">Take Surveys, Earn Credits</h1>
  <p class="interior-hero__desc" >Fill out a simple survey and earn up to <span class='credits'> 100 credits!</span></p>
</div><!--/.interior-hero -->
<div class="interior-body">
  <section class="card-container">
    <% @surveys.each do |survey| %>

        <%= link_to  survey do %>
          <div class="card-tout">
            <div class="card-inner">
              <h1 class="survey__title"><%= survey.name %></h1>
              <span class='card__credits card__lower'>+<%= survey.credits%></span>
              <% if UserSurvey.where(survey_id: survey.id,user_id:current_user.id,complete:true).present? %>
                <span class='survey__completed'>Survey Completed</span>
              <% end %>

              <% if current_user && current_user.admin %>
                  <%= link_to 'Edit', edit_survey_path(survey) %>
                  <%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          </div>
        <% end %>

    <% end %>
  </section>
</div><!--/.interior-body -->
